@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<style>
    .access-denied-wrapper {
        @* display: block; *@
        height: 100vh;
        width: 100vw;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 40px 20px;
        border-radius: 8px;
    }

    .access-denied-content {
        max-width: 600px;
        margin: auto;
        background-color: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
    }

    .access-denied-content h1 {
        font-size: 48px;
        font-weight: bold;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .access-denied-content p {
        font-size: 18px;
        color: #6c757d;
        margin-bottom: 30px;
    }

    .access-denied-content a.btn {
        padding: 10px 30px;
        font-size: 16px;
        border-radius: 5px;
    }
</style>

<div class="access-denied-wrapper">
    <div class="access-denied-content">
        <h1>Access Denied</h1>
        <p>You do not have the required permissions to view this page.</p>
        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">Go to Dashboard Page</a>
    </div>
</div>
