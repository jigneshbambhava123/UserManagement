@model UserManagement.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="main">
        <div class="loginpage">
            <h3 class="loginheader me-3">Login Page</h3>
            <!-- form -->
            <form asp-action="Login" asp-controller="Account" method="post" class="needs-validation is-validate">
                @Html.AntiForgeryToken()
                <div class="text-center mb-3">
                    <div data-mdb-input-init="" class="form-outline " data-mdb-input-initialized="true">
                        <label asp-for="Email" class="emaillabel">Email address:</label>
                        <div class="emailico position-relative">
                            <input asp-for="Email" type="email" id="loginName" class="form-control"
                                aria-describedby="validationServer03Feedback" placeholder="Email*">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div data-mdb-input-init="" class="form-outline" data-mdb-input-initialized="true">
                        <label asp-for="Password" class="emaillabel">Password:</label>
                        <div class="emailico position-relative">
                            <input asp-for="Password" type="password" id="password1" class="password form-control"
                                aria-describedby="validationServer03Feedback" placeholder="Password*">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="rememberforgot mb-4" style="display: flex; justify-content: space-between;">
                        <div class="form-check mb-3 mb-md-0">
                            <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked="">
                            <label asp-for="RememberMe" class="form-check-label" for="loginCheck"> Remember me </label>
                        </div>
                    </div>
                    <button type="submit" data-mdb-button-init="" data-mdb-ripple-init=""
                        class="btn btn-primary btn-block mb-4" style="width: 100%;"
                        data-mdb-button-initialized="true">Login</button>

                        <!-- Register buttons -->
                    <div class="text-center">
                        <p>Not a member? <a asp-action="Register" asp-controller="Account">Register</a></p>
                    </div>
            </form>
        </div>
    </div>
</body>
</html>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>

<!-- Toastr CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        @if(TempData["ErrorMessage"] != null)
        {
            <text>toastr.error('@TempData["ErrorMessage"]');</text>
        }
    });
</script>