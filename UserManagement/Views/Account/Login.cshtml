@model UserManagement.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="main">


        <div class="loginpage d-flex shadow-lg p-3 " >
            <img alt="" class="leftimage shadow-lg p-3 rounded-left">  

            <div class="rightside">
                <!-- form -->
                <form asp-action="Login" asp-controller="Account" method="post" class="needs-validation is-validate">
                    @Html.AntiForgeryToken()
                    <div class="annalysisform p-2 shadow-lg p-3 bg-white rounded-right">
                        <div class="onecolomnmain" style="margin: 10px;">
                            <div class="header mb-3 d-flex">
                                <h3 class="text-center" style="color: #0066a7;">User Management</h3>
                            </div>                            
                            <div class="text-center mb-3">
                                <div data-mdb-input-init="" class="form-outline mb-3" data-mdb-input-initialized="true">
                                       <label asp-for="Email" class="emaillabel">Email address:</label>
                                    <div class="emailico position-relative">
                                        <input asp-for="Email" type="email" id="loginName" class="form-control"
                                            aria-describedby="validationServer03Feedback" placeholder="Email*">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div data-mdb-input-init="" class="form-outline mb-3" data-mdb-input-initialized="true">
                                    <label asp-for="Password" class="emaillabel">Password:</label>
                                    <div class="emailico position-relative">
                                        <input asp-for="Password" type="password" id="password1" class="password form-control"
                                            aria-describedby="validationServer03Feedback" placeholder="Password*">
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="rememberforgot mb-4" style="display: flex; justify-content: space-between;">
                                    <div class="form-check mb-3 mb-md-0">
                                       <input asp-for="RememberMe" class="form-check-input" />
                                        <label asp-for="RememberMe" class="form-check-label"> Remember me </label>
                                    </div>
                                    <div>
                                        <a asp-action="ForgotPassword" asp-controller="Account">Forgot password?</a>
                                    </div>
                                </div>
                                <button type="submit" data-mdb-button-init="" data-mdb-ripple-init=""
                                    class="btn btn-primary btn-block mb-4" style="width: 100%;"
                                    data-mdb-button-initialized="true">Login</button>

                                    <!-- Register buttons -->
                                <div class="text-center">
                                    <p>Not a member? <a asp-action="Register" asp-controller="Account">Register</a></p>
                                </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
<script>
    $(document).ready(function () {
         @if(TempData["error"] != null)
        {
            <text>toastr.error('@TempData["error"]');</text>
        }
        @if(TempData["success"] != null)
        {
            <text>toastr.success('@TempData["success"]');</text>
        }
    });
</script>
}