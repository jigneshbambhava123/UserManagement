@model UserManagement.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="main">
        <div class="loginpage d-flex shadow-lg p-3 " >
            <img alt="" class="leftimage shadow-lg p-3 rounded-left">  

            <div class="rightpage" style="height: 505px;">
                <div class="annalysisform p-2 shadow-lg p-3 bg-white rounded-right">
                    <div class="onecolomnmain" style="margin: 10px;">
                        <!-- header -->
                        <div class="header mb-3 d-flex">
                            <h3 class="text-center" style="color: #224080 ;">USER MANAGEMENT</h3>
                        </div>

                        <h5 class="welcome mb-4">Forgot Password</h5>

                        <div class="welcome mb-3">
                            Enter your email and We'll send you a link to reset your password
                        </div>
                        <!-- form -->
                        <form method="post" asp-action="ForgotPassword" >
                            <div class="text-center mb-3">

                                <!-- Email -->
                                <div class="col-12 mb-4">
                                    <div class="form-floating">
                                        <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                                        <label asp-for="Email">Email address*</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Submit button -->

                                <button type="submit" data-mdb-button-init="" data-mdb-ripple-init=""
                                    class="btn btn-primary btn-block mb-2" style="width: 100%;"
                                    data-mdb-button-initialized="true">Send</button>

                                @if (ViewBag.Message != null){
                                    <div class="alert alert-success">@ViewBag.Message</div>
                                }

                                <!-- Register buttons -->
                                <div class="text-center">
                                    <p><a asp-controller="Account" asp-action="Login">Back to Login</a></p>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
<script>
    $(document).ready(function () {
         @if(TempData["error"] != null)
        {
            <text>toastr.error('@TempData["error"]');</text>
        }
        @if(TempData["success"] != null)
        {
            <text>toastr.success('@TempData["success"]');</text>
        }
    });
</script>
}