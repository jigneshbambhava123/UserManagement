@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UserManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

</head>
<body>
      <!-- Logout model -->
        <!-- Modal -->
        <div class="modal fade" id="logout" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body"
                        style="display: flex;flex-direction: column;justify-content: center;align-items: center;">
                        <img style="height: 36px; width: 51px;" src="~/images/toppng.com-warning-icon-2400x2400.png"
                            alt="">
                        <div class="form">
                            Are you sure You Want to Logout?
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a type="button" class="btn btn-primary" asp-controller="Account" asp-action="Logout">Yes</a>
                        <button type="button" class="btn  btn-light  " data-bs-dismiss="modal">NO</button>
                    </div>
                </div>
            </div>
        </div>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm ps-3 pe-3" style="background-color: #0066a7 !important;">
                <a class="navbar-brand fw-bold me-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <h3 style="color: white;">UserManagement</h3>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav d-flex flex-row">
                        <li class="nav-item me-4">
                            <a class="nav-link" asp-controller="Home" asp-action="Index"  style="color: white;">Home</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item me-4">
                                <a class="nav-link" asp-controller="Home" asp-action="Privacy"  style="color: white;">Privacy</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Index"  style="color: white;">Users</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-primary d-flex justify-content-start" data-bs-toggle="modal" data-bs-target="#logout" role="button"  style="text-decoration:none;color: white;">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - UserManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
     <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>

    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
