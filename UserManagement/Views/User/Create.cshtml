@model UserManagement.ViewModels.UserViewModel

@{
    ViewBag.Title = "Create User";
        Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="d-flex justify-content-between mb-3 mt-3">
    <div class="dashboard" style="color: #0066a7;">Add New User</div>
    <a asp-action="Index" class="btn btn-primary" style="display: flex; justify-content: center;align-items: center;">Back</a>
</div>

<form asp-action="Create" id="createUserForm" method="post">
     @Html.AntiForgeryToken()
    <div class="annalysisform p-2 shadow-lg p-3 mb-5 bg-white rounded">
        <div class="onecolomnmain" style="margin: 10px;">
            <div class="row">
                <!-- First Name -->
                <div class="col-12 col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Firstname" type="text" class="form-control" placeholder="Firstname">
                        <label asp-for="Firstname">First Name*</label>
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                </div>

                <!-- Last Name -->
                <div class="col-12 col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Lastname" type="text" class="form-control" placeholder="Lastname">
                        <label asp-for="Lastname">Last Name*</label>
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                </div>
            </div>
        
            <div class="row">
                <!-- Email -->
                <div class="col-12 col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                        <label asp-for="Email">Email address*</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <!-- Password-->
                <div class="col-12 col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <label asp-for="Password">Password*</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- PhoneNumber -->
                <div class="col-12 col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Phone Number">
                        <label asp-for="PhoneNumber">Phone Number*</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <!-- Role-->
                <div class="col-12 col-md-6 mb-3">
                    <div class="form-floating">
                        <select asp-for="RoleId" class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <option value="1" selected>Admin</option>
                            <option value="2">User</option>
                        </select>
                        <label for="floatingSelect">Select Role*</label>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Dateofbirth -->
                <div class="col-12 col-md-6 mb-3">
                    <div class="form-floating d-flex align-items-center mb-2">
                        <input asp-for="Dateofbirth" type="date" class="form-control" id="fromDate" style="font-size: initial;" placeholder="dd-mm-yyyy" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                        <label for="fromDate" style="font-size: initial;">Date Of Birth*</label>
                    </div>  
                    <span asp-validation-for="Dateofbirth" class="text-danger"></span>
                </div>
            </div>

            <input asp-for="IsActive" type="checkbox" value="true"  hidden/>

            <button id="submitUserBtn" type="button" class="btn btn-secondary btn-sm">Create</button>
            <a asp-action="Index" class="btn btn-sm">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
    $(document).ready(function () {
        setTimeout(function() {
            hideLoader();
        }, 500);
        @if(TempData["error"] != null)
        {
            <text>toastr.error('@TempData["error"]');</text>
        }
        @if(TempData["success"] != null)
        {
            <text>toastr.success('@TempData["success"]');</text>
        }

        $("#submitUserBtn").on("click", function (e) {
            e.preventDefault();

            var form = $("#createUserForm");

            if (form.valid()) {
                var formData = form.serialize();

                $.ajax({
                    url: form.attr("action"),
                    type: "POST",
                    data: form.serialize(),
                    success: function(response) {                        
                        if (response.success) {
                            window.location.href = '@Url.Action("Index", "User")';
                        } else {
                            if (response.errors) {
                                $.each(response.errors, function(key, errorMessages) {
                                    toastr.error(errorMessages.join("<br/>"));
                                });
                            } else {
                                toastr.error(response.message);
                            }
                        }   
                    },
                    error: function(xhr) {
                        toastr.error("An unexpected error occurred.");
                    }
                });
            } 
        });
    });
</script>
}